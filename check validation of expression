%{
#include<stdio.h>
#include<string.h>
int valid=1;
int param=0;
%}
%%
[0-9]+  { /*ignore*/ }
[a-zA-z_]  { /*ignore*/ }
"("  { param++; }
")"  { param--; if(param<0) valid=0; }
[ \t\n]] { /*ignore sapceing*/ }
.      { /*ignore*/  }
%%
int main(){
printf("enter the expression: ");
yylex();
if(valid && param==0){
printf("expression is valid\n");
}
else{
printf("expression is invalid\n");
}
return 0;
}
int yywrap() {
return 1;
}
