%{
#include <stdio.h>
%}

%%
"//".*                  { printf("Single line comment: %s\n", yytext); }

"/*"([^*]|\n)*"*/"      { printf("Multi line comment: %s\n", yytext); }

.|\n                    ;   /* ignore other characters */
%%

int main() {
    printf("Enter input:\n");
    yylex();
    return 0;
}

int yywrap() {
    return 1;
}
